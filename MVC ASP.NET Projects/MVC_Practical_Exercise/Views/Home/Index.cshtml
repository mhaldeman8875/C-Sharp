@model MVC_Practical_Exercise.Models.Quote

<div class="row no-gutters m-3">
    <div class="card shadow col-sm-12 col-md-10 col-lg-6 mx-auto">
        <div class="card-header text-center">
            <h1 class="m-0">Car Insurance Calculator</h1>
            <p>Please fill out the form below to get your car insurance quote</p>
        </div>
        <div class="card-body">


            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    @Html.TextBox(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } } )
                </div>

                <div class="form-group col-md-12">
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>

                <div class="form-group col-md-12">
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email" />
                </div>

                <div class="form-group col-md-12">
                    <label for="DOB">Enter your date of birth</label>
                    <input name="DateOfBirth" type="date" class="form-control" id="DOB">
                </div>
                <div class="form-group col-md-12">
                    <input name="CarYear" type="number" class="form-control" placeholder="Vehicle Year" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarMake" type="text" class="form-control" placeholder="Vehicle Make" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarModel" type="text" class="form-control" placeholder="Vehicle Model" />
                </div>
                <div class="form-group col-md-12">
                    <input name="Tickets" type="number" class="form-control" placeholder="# of Speeding Tickets" />
                </div>
                <div class="form-group col-md-12">
                    <label for="Dui">Have you ever had a DUI?</label>
                    <select class="form-control" id="Dui" name="Dui">
                        <option value="0">Yes</option>
                        <option value="1">No</option>
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <label for="Coverage">What kind of coverage are you looking for?</label>
                    <select class="form-control" id="Coverage" name="Coverage">
                        <option value="0">Full Coverage</option>
                        <option value="1">Liability Coverage</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
            }
        </div>
    </div>
</div>